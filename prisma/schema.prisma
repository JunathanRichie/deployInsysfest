datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  username  String      
  password  String
  fullName  String
  quickNote String?      
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  task      Task[]      @relation("RelationUserTask")
  course    Course[]    @relation("RelationUserCourse")
}

model Task {
  id          String       @id @default(uuid())
  name        String
  startTime   DateTime
  endTime     DateTime
  details     String?
  status      String     @default("TO_DO")
  category    String       @default("uncategorized")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  user   User              @relation("RelationUserTask", fields: [id], references: [id])
  userId String
}

model Course {
  id          String       @id @default(uuid())
  name        String
  color       String      @default("#D79EB8")
  user   User              @relation("RelationUserCourse", fields: [id], references: [id])
  notes       Notes[]   @relation("RelationCourseNotes")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
}

model Notes {
  id          String       @id @default(uuid())
  title       String
  content     String?
  course      Course    @relation("RelationCourseNotes", fields: [id], references: [id])
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
}
